{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "esnext.asynciterable",
            "dom"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "outDir": "dist"
    },
    "include": [
        "src",
        "test",
        "types",
        "build",
        "test.ts",
        "gulpfile.ts",
        "webpack.config.ts"
    ]
}
