{
    "compilerOptions": {
        "declaration": true,
        "rootDir": ".",
        "jsx": "preserve",
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "esnext"
        ],
        "listEmittedFiles": true,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "diagnostics": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declarationDir": "../../out/core",
        "outDir": "../../out/core",
        "typeRoots": [
            "../../../node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "*": ["*"],
            "assets": ["assets"],
            "assets/*": ["assets/*"],
            "elements": ["elements"],
            "elements/*": ["elements/*"],
            "classes/*": ["classes/*"],
            "collections/*": ["collections/*"],
            "components/*": ["components/*"],
            "pages/*": ["pages/*"],
            "styling/*": ["styling/*"],
            "stores": ["stores/index.tsx"],
            "stores/*": ["stores/*"],
            "router": ["router"],
            "router/*": ["router/*"],
            "menus": ["menus/index.ts"],
            "menus/*": ["menus/*"],
            "utils/*": ["utils/*"],
            "decorators": ["decorators.tsx"],
            "interfaces": ["interfaces.ts"],
            "ioc": ["ioc.ts"]
        }
    },
    "include": [
        "index.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
