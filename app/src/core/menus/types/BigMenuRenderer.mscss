@import "../../styling/base";

.big-menu-item {
    &:hover {
        //background-color: cadetblue;
    }

    .icon-col {
        width: 50px
    }

    .icon {
        font-size: 30px;
        margin: 18px auto 0
    }

    .label-col {
        white-space: normal;
        width: calc(100% - 50px)
    }

    .label {
        font-weight: bold;
        padding: 0;
        height: 50%
    }

    .sublabel {
        font-size: 10px;
        height: 50%;
        line-height: 15px;
    }
}

:global(.ant-layout-header) {
    :local(.big-menu-item) {
        height: var(--layout-header-height) !important;
        max-height: var(--layout-header-height) !important;
        line-height: 50px;
    }
}

:global(.ant-layout-sider) {
    :local(.big-menu-item) {
        height: auto !important;
    }
    :local(.big-menu-item .label) {
        height: auto;
    }
    :local(.big-menu-item .sublabel) {
        height: auto;
    }
}
